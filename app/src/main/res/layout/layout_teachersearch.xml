<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="23dp"
        android:orientation="vertical">



        <RelativeLayout
            android:id="@+id/nav_header_container"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/imgsrc"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:textAllCaps="false"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:padding="3dp"
                android:text="class"
                android:textColor="@color/primaryText"
                android:textSize="15dp"
                android:layout_alignTop="@+id/imgsrc"
                android:layout_toRightOf="@+id/imgsrc"
                android:layout_toEndOf="@+id/imgsrc" />

            <TextView
                android:layout_below="@+id/txtName"
                android:id="@+id/txtCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price"
                android:padding="3dp"
                android:textColor="@color/primaryText"
                android:textSize="14dp"
                android:layout_alignLeft="@+id/txtName"
                android:layout_alignStart="@+id/txtName" />

            <TextView
                android:layout_below="@+id/txtCode"
                android:id="@+id/txtDob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="price"
                android:textColor="@color/primaryText"
                android:textSize="14dp"
                android:layout_alignLeft="@+id/txtCode"
                android:layout_alignStart="@+id/txtCode" />


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>